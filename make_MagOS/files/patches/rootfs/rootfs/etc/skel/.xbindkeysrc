# имя файлу ~/.xbindkeysrc #
# положите его в домашнюю папку и выполните xbindkeys (сначала его нужно установить) #
# после внесения изменений в этот файл killall xbindkeys затем xbindkeys #
###########################
# xbindkeys configuration #
###########################
# список доступных горячих кнопок 
" keyscripts list "
  Mod4 + k

# run - диалог
" keyscripts run "
  Mod4 + r

" keyscripts run "
  Alt + F2

# xkill
" xkill "
  Mod4 + Escape

# менеджер модулей
" mod_mnger "
  Mod4 + m 

# погасить экран
" xset dpms force off "
  Mod4 + space

# спящий режим
" pm-suspend "
  Mod4 + Return

# проводник
" xdg-open ~/ "
  Mod4 + e

# поиск по содержимому буфера обмена в google 
" keyscripts search "
  Mod4 + g

# перейти по адресу в буфере обмена
" keyscripts url "
  Mod4 + u

# google-перевод en -> rus содержимого буфера обмена (win+>)
" keyscripts enrus "
  Mod4 + period

# google-перевод rus -> en содержимого буфера обмена (win+<)
" keyscripts rusen "
  Mod4 + comma


# заблокировать экран
" dbus-send --session --dest=org.freedesktop.ScreenSaver --type=method_call --print-reply /ScreenSaver org.freedesktop.ScreenSaver.Lock "
  Mod4 + l

# показать рабочий стол 
" wmctrl -k on "
  Mod4 + d

# включение, выключение тачпада
" keyscripts touchpad "
  Mod4 + t

# включение выключение радиоинтерфейсов BT WLAN
" keyscripts rfswitch "
  Mod4 + w

# запись экрана win+PrintScreen
# (на ноутбуках PrintsScreen обычно с доп.клавишей Fn )
" keyscripts record "
  Mod4 + Print

# информация о железе и системе
" keyscripts info "
  Mod4 + i

# информация о пользовательских сетевых соединения
" keyscripts network "
  Mod4 + n

# увеличить громкость (колесом мышки)
"amixer -q set Master 5+"
  Mod4 + b:4

# уменьшить громкость (колесом мышки)
"amixer -q set Master 5-"
  Mod4 + b:5

# поворот экрана 90 град. против часовой
"xrandr --orientation left"
  Mod4 + Left

# поворот экрана 180 град. 
"xrandr --orientation inverted"
  Mod4 + Up

# поворот экрана 90 град. по часовой
"xrandr --orientation right"
  Mod4 + Right
 
# поворот экрана 0 град.
"xrandr --orientation normal"
  Mod4 + Down

# Хоткеи для пользователей
" keyscripts mykeys 1 "
  Mod4 + F1
" keyscripts mykeys 2 "
  Mod4 + F2
" keyscripts mykeys 3 "
  Mod4 + F3
" keyscripts mykeys 4 "
  Mod4 + F4
" keyscripts mykeys 5 "
  Mod4 + F5
" keyscripts mykeys 6 "
  Mod4 + F6
" keyscripts mykeys 7 "
  Mod4 + F7
" keyscripts mykeys 8 "
  Mod4 + F8
" keyscripts mykeys 9 "
  Mod4 + F9

##################################
# End of xbindkeys configuration #
##################################
