# ~/.xbindkeysrc #
###########################
# xbindkeys configuration #
###########################
# Hotkeys list 
" /usr/lib/magos/functions show_hotkeys "
  Mod4 + k

# run - dialog
" /usr/lib/magos/functions show_run "
  Mod4 + r

" /usr/lib/magos/functions show_run "
  Alt + F2

# xkill
" xkill "
  Mod4 + Escape

# MagOS modules manager
" modmnger "
  Mod4 + x

# turn off screen
" sleep 1 && xset dpms force off "
  Mod4 + space

# suspend mode
" systemctl suspend "
  Mod4 + Return

# open file manager
" xdg-open ~/ "
  Mod4 + e

# google search from clipboard
" /usr/lib/magos/functions google_search "
  Mod4 + g

# open url from clipboard in firefox
" /usr/lib/magos/functions open_url "
  Mod4 + u

# google-translate en ->  from clipboard in firefox (win+>)
" /usr/lib/magos/functions translate_en_rus firefox "
  Mod4 + period

# google-translate rus -> en  from clipboard in firefox (win+>)
" /usr/lib/magos/functions translate_rus_en firefox"
  Mod4 + comma

# lock screen
" /usr/lib/magos/functions lock_session "
  Mod4 + l

# show desktop 
" wmctrl -k on "
  Mod4 + d

# touchpad on/off
" /usr/lib/magos/functions touchpad "
  Mod4 + t

# bluetooth, wi-fi on/of
" /usr/lib/magos/functions rfswitch "
  Mod4 + w

# record desktop win+PrintScreen
" /usr/lib/magos/functions recordvideo "
  Alt + Mod4 + Print

# system info
" /usr/lib/magos/functions show_info "
  Mod4 + i

# netstat info
" /usr/lib/magos/functions show_network "
  Mod4 + n

# sreen scale 
" /usr/lib/magos/functions screen_scale "
  Mod4 + s

# change volume (by mouse weel)
"amixer -q set Master 5+ ; pactl -- set-sink-volume @DEFAULT_SINK@ +5%"
  Mod4 + b:4

"amixer -q set Master 5-; pactl -- set-sink-volume @DEFAULT_SINK@ -5%"
  Mod4 + b:5

# screen rotate left
"xrandr --orientation left"
  Mod4 + Left

# invert screen
"xrandr --orientation inverted"
  Mod4 + Up

# screen rotate right
"xrandr --orientation right"
  Mod4 + Right

# normal screen orientation
"xrandr --orientation normal"
  Mod4 + Down

# poweroff
"poweroff"
 Shift + XF86PowerOff

# reboot
"reboot"
 Control + XF86PowerOff

# user's hotkeys
" /usr/lib/magos/functions userkeys 1 "
  Mod4 + F1
" /usr/lib/magos/functions userkeys 2 "
  Mod4 + F2
" /usr/lib/magos/functions userkeys 3 "
  Mod4 + F3
" /usr/lib/magos/functions userkeys 4 "
  Mod4 + F4
" /usr/lib/magos/functions userkeys 5 "
  Mod4 + F5
" /usr/lib/magos/functions userkeys 6 "
  Mod4 + F6
" /usr/lib/magos/functions userkeys 7 "
  Mod4 + F7
" /usr/lib/magos/functions userkeys 8 "
  Mod4 + F8
" /usr/lib/magos/functions userkeys 9 "
  Mod4 + F9

##################################
# End of xbindkeys configuration #
##################################
