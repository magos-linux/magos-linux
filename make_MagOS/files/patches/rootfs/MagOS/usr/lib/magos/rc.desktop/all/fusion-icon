#!/bin/sh
ENABLED=yes
[ "$ENABLED" != "yes" ] && exit 0

. /etc/sysconfig/compositing-wm
. /usr/lib/magos/functions
. /usr/lib/magos/os-config
. /etc/MagOS/config

DE=$(detectDE)

if [ "$COMPOSITING_WM_START" = "yes" -a "$COMPOSITING_WM" = "compiz-fusion" -a "$DE" != "gnome-shell" -a  "$DE" != "gnome" ] ;then
   sleep $FUSIONICONTIMEOUT
   fusion-icon -f &
fi
