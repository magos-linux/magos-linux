# This is a sample menu.lst file. You may make some changes to it.

timeout 30
default 0

#color blue/green yellow/red white/magenta white/magenta
gfxmenu /boot/grub4dos/local/gfxmenu

graphicsmode -1 640 480
font /boot/grub4dos/unifont.hex.gz
color white/black yellow/blue
splashimage /boot/grub4dos/boot_xpm.gz

iftitle [if exist /isomode] MagOS Linux-Загрузка с ISO/DVD
kernel /MagOS/vmlinuz vga=791 splash=silent plymouth.enable=1 logo.nologo vt.global_cursor_default=0 uird.force scantimeout=3
initrd /MagOS/uird.magos.cpio.xz

iftitle [if not exist /isomode] MagOS Linux-С сохранением данных
if not exist /MagOS/MagOS.sgn find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz vga=791 splash=silent plymouth.enable=1 logo.nologo vt.global_cursor_default=0 uird.home=home.img uird.mode=machines
initrd /MagOS/uird.magos.cpio.xz

title MagOS Linux-Чистый режим
if not exist /MagOS/MagOS.sgn find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz vga=791 splash=silent plymouth.enable=1 logo.nologo vt.global_cursor_default=0
initrd /MagOS/uird.magos.cpio.xz

iftitle [if exist /MagOS.bak/MagOS.sgn] MagOS Linux-С сохранением данных (предыдущая версия)
kernel /MagOS.bak/vmlinuz vga=791 splash=silent plymouth.enable=1 logo.nologo vt.global_cursor_default=0 uird.home=home.img uird.mode=machines uird.from=MagOS.bak;MagOS-Data
initrd /MagOS.bak/uird.magos.cpio.xz

iftitle [if exist /MagOS.bak/MagOS.sgn] MagOS Linux-Чистый режим (предыдущая версия)
kernel /MagOS.bak/vmlinuz vga=791 splash=silent plymouth.enable=1 logo.nologo vt.global_cursor_default=0 uird.from=MagOS.bak;MagOS-Data
initrd /MagOS.bak/uird.magos.cpio.xz

