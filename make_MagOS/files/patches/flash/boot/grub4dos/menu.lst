title MagOS Linux Netlive
kernel /boot/tools/ipxe.lkrn
#initrd script.ipxe

title Additional software
configfile /boot/grub4dos/menu-add.lst

title Reboot
reboot

title Local language
configfile /boot/grub4dos/local/menu.lst

