# This is a sample menu.lst file. You may make some changes to it.
# Please install GRLDR boot strap code to MBR with the bootlace.com
# utility under Linux.

timeout 30
default 0

#color blue/green yellow/red white/magenta white/magenta
gfxmenu /boot/grub4dos/local/gfxmenu

graphicsmode -1 640 480
font /boot/grub4dos/unifont.hex.gz
color white/black yellow/blue
splashimage /boot/grub4dos/boot_xpm.gz

iftitle [if exist /isomode] MagOS Linux-Загрузка с ISO/DVD
kernel /MagOS/vmlinuz vga=791 splash=silent plymouth.enable=0 root=uird: uird.force
initrd /MagOS/uird.magos.cpio.xz

title MagOS Linux-С сохранением данных
#find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz vga=791 splash=silent plymouth.enable=0 root=uird: uird.home=home.img uird.mode=machines
initrd /MagOS/uird.magos.cpio.xz

title MagOS Linux-Чистый режим
#find --set-root --ignore-floppies --ignore-cd /MagOS/MagOS.sgn
kernel /MagOS/vmlinuz vga=791 splash=silent plymouth.enable=0 root=uird:
initrd /MagOS/uird.magos.cpio.xz

